@model Employee

@{
    ViewData["Title"] = "Add Employe";
}

<h2>Add New Employee</h2>

<hr>

<form asp-controller="Employee" asp-action="addEmployee" method="POST">
  <div class="form-group">
    <label asp-for="firstname"></label>  <!-- asp-for is tag of asp for -->
    <input type="text" class="form-control" asp-for="firstname" placeholder="Enter Fitst Name">
    <span class="text-danger" asp-validation-for="firstname"></span>
  </div>
    <div class="form-group">
    <label asp-for="SurName"></label>  
    <input type="text" class="form-control" asp-for="SurName" placeholder="Enter Last Name">
      <span class="text-danger" asp-validation-for="SurName"></span>    <!-- client side validation using asp core -->
  </div>
    <div class="form-group">
    <label asp-for="Address"></label>
    <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address">
    
  </div>
    <div class="form-group">
    <label asp-for="Gender"></label>
    <input type="text" class="form-control" asp-for="Gender" placeholder="M or F">
      
  </div>
    <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
     
  </div>

  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>


