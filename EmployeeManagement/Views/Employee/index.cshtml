@model List<Employee>
@{
    ViewData["Title"]= "List of Employee";
}


<h2>All Employee</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Address</th>
            <th scope="col">Gender</th>
            <th scope="col">Salary</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
            foreach (var employee in Model) // here model will represent the model imported at top
            {
                <tr>
                    <th scope="row">@count</th>
                    <td> <a href="/Employee/Detail?firstName=@employee.firstname"> @employee.firstname </a></td>
                    <td>@employee.SurName</td>
                    <td>@employee.Address</td>
                    <td>@employee.Gender</td>
                    <td>@employee.Salary</td>
                    <td>
                        
                        <a class="btn btn-danger"  href="/Employee/DeleteEmp?firstName=@employee.firstname" role="button">Delete </a>
                        <a class="btn btn-primary"  href="/Employee/UpdateEmp?firstName=@employee.firstname" role="button">Update </a>
                    
                    </td>

                </tr>
              count++;
            } 
        }


    </tbody>
</table>
<a class="btn btn-primary"  asp-controller="Employee" asp-action="addEmployee" role="button">Add Emloyee </a>



